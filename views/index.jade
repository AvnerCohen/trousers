extends layout
block content
  h1= title
  p #{title} - Follow your followers
  #spinAjax.spin_ajax
   img(src='images/loader.gif')
  form(id='trousers_form')
   input(type='radio', name='behavior', value='white_listing', checked='true')
   span White Listing
   input(type='radio', name='behavior', value='followback_ratio')
   span Followback ratio
   br
   b @
   input(type='text', name='username', id='username', placeholder="What's your @Twitter?", required="true")
   span.ratio --- 
   br
   button Yalla!
   br
  div.time_line
    div.time_line_content
      ul.time_line_details
  div.non_block
   .box_title
    b Non Followers: 
     span(class='counter non_followers_label')
   .non_followers
  div.non_block
   .box_title
    b Followers: 
     span(class='counter followers_label')
   .followers
  div.non_block
   .box_title
    b Following/Followers: 
     span(class='counter both_f_and_f_label')
   .both_f_and_f
  div.non_block
   .box_title
    b Following: 
     span(class='counter friends_label')
   .friends
  div.non_block
   .box_title
    b White List: 
     span(class='counter white_list_label')
   .white_list 